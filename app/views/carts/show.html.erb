<% if notice %>
<div class="alert alert-info" role="alert">
  <p id="notice"><%= notice %></p>
</div>
<% end %>

<h1>Cart</h1>

<ul>
	<% @cart.line_items.each do |item|%>
	<li><%= item.product.title %></li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
