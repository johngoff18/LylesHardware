
<h1>Gallery 
	<%= link_to new_image_post_path, class:"btn btn-success btn-sm" do %>
	<i class="fas fa-plus"></i>
	<% end %>
</h1>


<div class="card-columns">
<% @image_posts.each do |image_post| %>
<div class="card">
    <img src="<%= image_post.link %>" class="card-img-top img-fluid" alt="<%= image_post.caption %> image">
    <div class="card-body">
      <h5 class="card-title"><%= image_post.caption %></h5>
      <p class="card-text"><%= image_post.caption %></p>
    </div>
  </div>
  <div class="clearfix"></div>
<% end %>

<script>
	$('#left-column').toggleClass('col-8').toggleClass('col-12')
	$('#right-column').hide()
	$('#amazon_music').hide()
</script>

