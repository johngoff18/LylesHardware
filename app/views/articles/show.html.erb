<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @article.title %></h5>
    <p class="card-text"><%= @article.text %></p>

<h6>Comments <span class="badge badge-primary"><%= @article.comments.count %></span></h6>

    <%= render @article.comments %>

 
<h6>Add a comment:</h6>
<%= render 'comments/form' %>


<%= link_to 'Edit', edit_article_path(@article), class: 'card-link' %>
<%= link_to 'Back', articles_path, class: 'card-link' %>
  </div>
</div>


