<div class="card">
	<img src="<%= @article.thumbnail_url %>" class="card-img-top img-fluid" />
  <div class="card-body">
    <h5 class="card-title"><%= @article.title %></h5>
	<p class="card-text"><%= render "welcome/share" %></p>
    <p class="card-text"><%= @article.text %></p>
	<p class="card-text text-muted small">Author: Lyle</p>

<%= render "articles/disqus"%>


<%= link_to 'Edit', edit_article_path(@article), class: 'card-link' %>
<%= link_to 'Back', articles_path, class: 'card-link' %>
  </div>
</div>


